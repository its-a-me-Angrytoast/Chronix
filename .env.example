### Chronix .env example
# Replace values for your environment. Booleans: true/false
# IMPORTANT: Do NOT commit real secrets. This file is only an example.
TOKEN=
OWNER_ID=123456789012345678  # your Discord user id for owner-only commands
DEV_GUILD_ID=                 # optional: dev/test guild id for fast command sync
DEV_MODE=true                 # run in development mode (hot-reload, verbose logging)
FORCE_OWNER_OVERRIDE=false    # allow owner commands outside DEV_GUILD (requires dashboard confirmation normally)

# Database (Postgres DSN preferred). For local dev you can use the docker-compose default.
DATABASE_DSN=postgres://chronix:chronixpass@postgres:5432/chronix
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=chronix
POSTGRES_USER=chronix
POSTGRES_PASSWORD=chronixpass

# Lavalink / Music
LAVALINK_HOST=127.0.0.1
LAVALINK_PORT=2333
LAVALINK_AUTH=your_lavalink_password
MUSIC_DJ_ROLE_REQUIRED=false  # require a DJ role or Manage Server for music controls

# Spotify (optional) — client credentials for searching Spotify tracks
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Lyrics provider (optional) — Genius API key or fallback will be used when configured
GENIUS_API_KEY=
ENABLE_LYRICS=false

# Feature toggles
ENABLE_ECONOMY=true
ENABLE_GAMEPLAY=true
ENABLE_MODERATION=true
ENABLE_MUSIC=false
ENABLE_LOGGING=true
ENABLE_AI=false

# Third-party API keys (leave blank if not used)
GEMINI_API_KEY=
YOUTUBE_API_KEY=

# Scheduler / defaults
RSS_POLL_INTERVAL=300
CRATE_DEFAULTS=basic,advanced,mythic
LOG_NON_AUDIT_EVENTS=true

# Bot prefix
PREFIX=chro

# Example environment variables for Chronix (Phase 1)
TOKEN=
DEV_GUILD_ID=
OWNER_ID=
FORCE_OWNER_OVERRIDE=false
DEV_MODE=true
# Database configuration (Postgres)
# Example DSN: postgres://chronix:chronixpass@postgres:5432/chronix
DATABASE_DSN=postgres://chronix:chronixpass@postgres:5432/chronix
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=chronix
POSTGRES_USER=chronix
POSTGRES_PASSWORD=chronixpass

# Lavalink (optional)
LAVALINK_HOST=lavalink
LAVALINK_PORT=2333

