# Chronix — example environment variables
# Copy this file to .env and fill values. Do NOT commit real secrets.

# Discord
DISCORD_TOKEN=
OWNER_ID=123456789012345678
DEV_GUILD_ID=123456789012345678
PREFIX=chro

# Database (Postgres recommended for production)
# You can use either DATABASE_DSN or the detailed POSTGRES_* variables.
DATABASE_DSN=postgres://chronix:chronixpass@postgres:5432/chronix
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=chronix
POSTGRES_USER=chronix
POSTGRES_PASSWORD=chronixpass

# Lavalink / Wavelink (music) — optional
LAVALINK_HOST=lavalink
LAVALINK_PORT=2333
LAVALINK_AUTH=changeme

# AI providers (opt-in)
ENABLE_AI=false
GEMINI_API_URL=
GEMINI_API_KEY=
OPENAI_API_URL=
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Feature toggles
ENABLE_ECONOMY=true
ENABLE_GAMEPLAY=true
ENABLE_MODERATION=true
ENABLE_MUSIC=true
ENABLE_TICKETS=true
ENABLE_LOGGING=true

# Third-party APIs (optional)
YOUTUBE_API_KEY=
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Runtime / deployment
DEV_MODE=true
FORCE_OWNER_OVERRIDE=false
LOG_NON_AUDIT_EVENTS=true

# AI / rate limits
AI_COOLDOWN_SECONDS=5
AI_LOGGING_ENABLED=false

# Misc
RSS_POLL_INTERVAL=300
CRATE_DEFAULTS=basic,advanced,mythic

# XP / Leveling
XP_MESSAGE_COOLDOWN=60
XP_MIN_PER_MESSAGE=5
XP_MAX_PER_MESSAGE=12
XP_ROLE_MULTIPLE=5
XP_BASE=100

# Advanced DB pool tuning (optional)
DB_POOL_MIN=1
DB_POOL_MAX=10

# Note: add any provider-specific secrets here. Keep secrets out of VCS.
