# Chronix — example environment variables
# Copy this file to .env and fill values. Do NOT commit real secrets.

# Discord
DISCORD_TOKEN=
OWNER_ID=123456789012345678
DEV_GUILD_ID=123456789012345678
PREFIX=chro

# Database (Postgres recommended for production)
# You can use either DATABASE_DSN or the detailed POSTGRES_* variables.
DATABASE_DSN=postgres://chronix:chronixpass@postgres:5432/chronix
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=chronix
POSTGRES_USER=chronix
POSTGRES_PASSWORD=chronixpass

# Lavalink / Wavelink (music) — optional
LAVALINK_HOST=lavalink
LAVALINK_PORT=2333
LAVALINK_AUTH=changeme

# AI providers (opt-in)
ENABLE_AI=false
GEMINI_API_URL=
GEMINI_API_KEY=
OPENAI_API_URL=
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Feature toggles
ENABLE_ECONOMY=true
ENABLE_GAMEPLAY=true
ENABLE_MODERATION=true
ENABLE_MUSIC=true
ENABLE_TICKETS=true
ENABLE_LOGGING=true

# Third-party APIs (optional)
YOUTUBE_API_KEY=
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Runtime / deployment
DEV_MODE=true
FORCE_OWNER_OVERRIDE=false
LOG_NON_AUDIT_EVENTS=true

# Dashboard settings (local owner dashboard)
# The dashboard is local by default; set an API key to allow remote access.
CHRONIX_DASHBOARD_API_KEY=
# Allow the bot to restart itself when a dashboard request asks for it.
# Only enable when running under a supervisor (docker/systemd).
CHRONIX_ALLOW_SELF_RESTART=false
# Poll interval (seconds) for the dashboard consumer in the bot
CHRONIX_DASHBOARD_POLL_INTERVAL=6
# Dashboard host/port when running the built-in FastAPI app (optional)
CHRONIX_DASHBOARD_HOST=127.0.0.1
CHRONIX_DASHBOARD_PORT=8081
# Default theme (green/blue/amber)
CHRONIX_THEME_DEFAULT=green
# Optional server/guild count for the dashboard (bot writes a live count to data/dashboard_stats.json).
# You do NOT need to set CHRONIX_SERVER_COUNT when running the bot; the bot will populate live server count automatically.
CHRONIX_SERVER_COUNT=

# Minimum required vars for dashboard usage:
# - DISCORD_TOKEN (the bot token)
# - OWNER_ID (your Discord user id)
# If you populate these into .env the dashboard and consumer will start and the dashboard will show live server count.

# Optional: RPC server port for the bot's local RPC endpoint (used by the dashboard to request immediate apply)
CHRONIX_DASHBOARD_RPC_PORT=9091

# Note: The bot will start a small aiohttp-based RPC server on localhost if aiohttp is installed.
# Ensure `aiohttp` is present in your environment (it's listed in requirements.txt).

# AI / rate limits
AI_COOLDOWN_SECONDS=5
AI_LOGGING_ENABLED=false

# Misc
RSS_POLL_INTERVAL=300
CRATE_DEFAULTS=basic,advanced,mythic

# XP / Leveling
XP_MESSAGE_COOLDOWN=60
XP_MIN_PER_MESSAGE=5
XP_MAX_PER_MESSAGE=12
XP_ROLE_MULTIPLE=5
XP_BASE=100

# Advanced DB pool tuning (optional)
DB_POOL_MIN=1
DB_POOL_MAX=10

# Note: add any provider-specific secrets here. Keep secrets out of VCS.
